{
    "name": "record received messages in db",
    "throttle": "30s",
    "condition": {
        "nested": [
            {
                "fn": "DeviceClass",
                "not": true,
                "args": {
                    "Value": "DeviceClass(zigbee-bridge)"
                }
            },            
            {
                "or": true,
                "nested": [
                    {
                        "fn": "FromEndDevice"
                    },
                    {
                        "fn": "Channel",
                        "args": {
                            "Value": "ChannelType(rest)"
                        }
                    }
                ]
            }
        ]
    },
    "actions": [{"fn": "RecordMessage"}]
}